{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["tsconfig.json", "src/**", "specs/**"],
      "outputs": ["dist/**"]
    },
    "build-core": {
      "dependsOn": ["^build-core"],
      "inputs": ["tsconfig.json", "src/**", "specs/**"],
      "outputs": ["dist/**"]
    }
  }
}
