{
  "name": "extension",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "mkdir -p dist && cp assets/* ./dist && tsup src/background.ts src/content.ts src/inpage.ts src/options.ts --clean --out-dir dist/js --platform neutral --target=es2020 --format iife",
    "dev": "pnpm build --sourcemap inline --watch",
    "start": "web-ext run --source-dir ./dist -t chromium --start-url http://localhost:5173"
  },
  "dependencies": {
    "@polkadot-api/light-client-extension-helpers": "workspace:*",
    "@polkadot-api/substrate-client": "workspace:*",
    "smoldot": "2.0.3"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "web-ext": "^7.7.0"
  }
}
