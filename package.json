{
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=@unstoppablejs/substrate-codecs --workspace=@unstoppablejs/substrate-client && npm run build --workspace=@unstoppablejs/substrate-codegen --workspace=@unstoppablejs/substrate-bindings",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "test": "npm run test --workspaces",
    "prepare": "husky install"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@fast-check/vitest": "^0.0.6",
    "esbuild": "^0.18.17",
    "husky": ">=6",
    "lint-staged": "^12.4.1",
    "prettier": "^3.0.1",
    "tslib": "^2.4.0",
    "typescript": "^5.1.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
  }
}
